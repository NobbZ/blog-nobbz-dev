---
import BlogPost from '@nz-components/BlogPost.astro';
import Comments from '@nz-components/Comments.astro';
import NobbzDev from './NobbzDev.astro';

const { content } = Astro.props;
const { title, publishDate, author, heroImage, alt } = content;
---

<NobbzDev {content}>
	<BlogPost {title} {author} {heroImage} {publishDate} {alt}>
		<slot />
	</BlogPost>
	<Comments />
</NobbzDev>
