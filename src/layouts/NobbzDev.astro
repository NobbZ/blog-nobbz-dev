---
import NavBox from "../components/NavBox.astro";

const { title } = Astro.props;
import "../styles/base.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class:list={[
      "mocha",
      "bg-gradient-to-b",
      "from-base",
      "to-crust",
      "min-h-screen",
      "bg-fixed",
      "overflow-y-scroll",
    ]}
  >
    <div
      class:list={[
        "flex",
        "flex-col",
        "m-auto",
        "min-h-screen",
        "justify-center",
        "text-text",
      ]}
    >
      <div class:list={["flex", "md:flex-row", "flex-col", "flex-none"]}>
        <div
          id="main"
          class:list={[
            "flex-none",
            "w-1/1",
            "border-4",
            "border-surface2",
            "p-1",
            "m-1",
            "rounded-[12px]",
            "md:w-4/5",
          ]}
        >
          <slot />
        </div>
        <NavBox />
      </div>
      <div class:list={["flex-auto"]}></div>
      <footer
        id="bottom"
        class:list={[
          "flex-none",
          "w-1/1",
          "border-4",
          "border-surface2",
          "m-1",
          "p-1",
          "rounded-[12px]",
        ]}
      >
        Â© by Norbert Melzer in {new Date().getFullYear()}
      </footer>
    </div>
  </body>
</html>
