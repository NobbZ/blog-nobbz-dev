---
import BlogPostPreview from '@nz-components/BlogPostPreview.astro';
import Tag from '@nz-components/Tag.astro';
import BlogHeader from '@nz-components/BlogHeader.astro';

const { frontmatter } = Astro.props;
const { tag, posts } = frontmatter;
---

<html>
	<head>
		<script src="https://kit.fontawesome.com/dea38d5462.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<BlogHeader />
		<div class="mx-auto max-w-[65em] px-[2rem] w-full;"></div>
		<div class="mx-auto max-w-[65em] px-[2rem] w-full;">
			<h1>
				The <Tag name={tag} /> tag
			</h1>
			<slot />

			{posts.map((p) => <BlogPostPreview post={p} />)}
		</div>
	</body>
</html>
