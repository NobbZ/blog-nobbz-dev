---
import { tagList, maxPostCount, minPostCount } from '@nz-scripts/tags';

import TagCard from './TagCard.astro';
---

<ul class="list-none pl-0 flex flex-wrap items-center justify-center">
	{
		tagList
			.sort((a, b) => (a.name > b.name ? 1 : -1))
			.map(({ name, posts }) => (
				<TagCard
					name={name}
					count={posts.length}
					maxCount={maxPostCount}
					minCount={minPostCount}
				/>
			))
	}
</ul>
