---
import { getCollection, getEntry, CollectionEntry } from 'astro:content';

import Author from './Author.astro';
import Date from './Date.astro';

export interface Props {
	title: string;
	author: 'nobbz';
	publishDate: Date;
	heroImage?: string;
	alt: string;
}

const { title, author: authorID, publishDate, heroImage, alt } = Astro.props;
// const { name, nick, twitter, github, gitlab, href } = { ...author, name: 'Norbert Melzer' };

// const author = await getEntry('author', `${authorID}.mdx`);
const [author] = await getCollection('author', ({ slug }) => slug === authorID);

if (!author) throw `author '${authorID}' is invalid`;

const name = author.data.name;
const nk = author.data.social.nick;
const tw = author.data.social.twitter;
const gh = author.data.social.github;
const gl = author.data.social.gitlab;
const hp = author.data.href;

const authorData = { name, nick: nk, href: hp, github: gh, twitter: tw, gitlab: gl };
---

<div class="layout">
	<article class="content">
		<div>
			<header>
				<div style="flex-grow: 4;">
					{
						heroImage && (
							<img
								width="720"
								height="420"
								class="hero-image"
								loading="lazy"
								src={heroImage}
								alt={alt}
							/>
						)
					}
					<h1 class="title" set:html={title} />
					<Author {...authorData} />
				</div>
				<div>
					<Date datetime={publishDate} />
				</div>
			</header>
			<main>
				<slot />
			</main>
		</div>
	</article>
</div>

<style>
	.hero-image {
		width: 100vw;
		object-fit: cover;
		object-position: center;
		margin-top: 2rem;
		margin-bottom: 4rem;
		max-width: 1280px;
	}

	@media (max-width: 50em) {
		.hero-image {
			height: 260px;
			margin-top: 0;
			margin-bottom: 2rem;
		}
	}

	.content {
		margin-bottom: 8rem;
	}

	.content :global(main > * + *) {
		margin-top: 1rem;
	}

	.content :global(h2) {
		margin-top: 4rem;
	}

	header {
		display: flex;
		flex-direction: row;
		text-align: left;
		align-items: flex-start;
		justify-content: left;

		padding-bottom: 2rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	.title {
		margin: 0;
		font-size: 2.25rem;
		font-weight: 700;
	}
</style>
