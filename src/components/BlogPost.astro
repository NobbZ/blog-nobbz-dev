---
import Author from './Author.astro';
import Date from './Date.astro';

export interface Props {
	title: string;
	author: { name?: string; nick?: string; twitter?: string; github?: string; gitlab?: string; href?: string };
	publishDate: string;
	heroImage: string;
	alt: string;
}

const { title, author, publishDate, heroImage, alt } = Astro.props;
const { name, nick, twitter, github, gitlab, href } = author || { name: "Norbert Melzer" };

const nk = author ? nick : "NobbZ"
const tw = author ? twitter : "NobbZ1981"
const gh = author ? github : "NobbZ"
const gl = author ? gitlab : "NobbZ"
const hp = author ? href : "https://nobbz.dev/"

---

<div class="layout">
	<article class="content">
		<div>
			<header>
				<div style="flex-grow: 4;">
					{heroImage && <img width="720" height="420" class="hero-image" loading="lazy" src={heroImage}
						alt={alt} />}
					<h1 class="title">{title}</h1>
					<Author {name} nick={nk} href={hp} github={gh} twitter={tw} gitlab={gl} />
				</div>
				<div>
					<Date date={publishDate} />
				</div>
			</header>
			<main>
				<slot />
			</main>
		</div>
	</article>
</div>

<style>
	.hero-image {
		width: 100vw;
		object-fit: cover;
		object-position: center;
		margin-top: 2rem;
		margin-bottom: 4rem;
		max-width: 1280px;
	}

	@media (max-width: 50em) {
		.hero-image {
			height: 260px;
			margin-top: 0;
			margin-bottom: 2rem;
		}
	}

	.content {
		margin-bottom: 8rem;
	}

	.content :global(main > * + *) {
		margin-top: 1rem;
	}

	.content :global(h2) {
		margin-top: 4rem;
	}

	header {
		display: flex;
		flex-direction: row;
		text-align: left;
		align-items: flex-start;
		justify-content: left;

		padding-bottom: 2rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 700;
	}
</style>